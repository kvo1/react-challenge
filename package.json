  "engines": {
    "node": "6.11.3",
    "npm": "3.10.10"
  },
  "scripts": {
    "build:clean": "rimraf public/",
    "build:css": "node-sass-chokidar --include-path ./node_modules ./client/ -o ./client/",
    "build:bundle": "npm run build:clean && npm run build:css && env-cmd development webpack --config ./setup/webpack/webpack.config.js --color -p --progress --display-error-details",
    "npmcheckversion": "node ./setup/scripts/checkversion.js",
    "preinstall": "npm run npmcheckversion",
    "postinstall": "npm run build:bundle",
    "start:demo": "env-cmd demo npm-run-all -p watch:server watch:css",
    "start:dev": "env-cmd development npm-run-all -p watch:server watch:css",
    "watch:css": "npm run build:css && npm run build:css -- --watch --recursive",
    "watch:server": "nodemon --watch ./client/**/* --exec \"node ./react-server/index.js\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "react",
    "redux",
    "express",
    "es6",
    "jsx",
    "webpack",
    "babel",
    "postcss"
  ],
  "pre-commit": "lint",
  "lint-staged": {
    "*.js": "lint:eslint"
  },
